/* pages/beizu/beizu.wxss */
.conts {
  border: 1rpx soldi red;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 20px;
}

.areas {
  height: 150px;
  width: 98%;
  font-size: 12pt;
  border: 1rpx solid gainsboro;
  padding-top: 30rpx;
  padding-left: 10rpx;
  margin-bottom: 20px;
  background-color: rgba(255, 145, 0, 0.075);
}

.currentWordNumber {
  font-size: 10pt;
  color: gray;
  position: absolute;
  right: 5px;
  bottom: 6rpx;
}
.heiheihei1 {
  display: flex;
  width:100%; 
}

.heiheihei1 image {
  height: 60px;
  width: 60px;
}
.heiheihei {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row-reverse;
  width:100%;
}

.heiheihei image {
  height: 60px;
  width: 60px;
}

.btn_style{
  text-align: center;
  font-size:40rpx;
  margin-top: 20rpx;
  float: center;
  background-color: #ff7200;
  color: #fff;
  height: 100rpx;
  width: 230rpx;
  border-radius: 40rpx;
  box-shadow:0 0 40rpx rgba(255, 144, 0, .2);
}





.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 50rpx 32rpx;
}
.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
  align-items: center;
  justify-content: center;
  display: flex;
}
input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}